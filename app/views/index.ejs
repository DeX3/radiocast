<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Radiocast</title>

    <link rel="stylesheet"
          href="public/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="public/css/style.css">
    <script type="text/javascript"
        src="public/bower_components/jquery/dist/jquery.min.js">
    </script>
    <script
        type="text/javascript"
        src="public/bower_components/bootstrap/dist/js/bootstrap.min.js">
    </script>

    <% if( appinfo.environment === "development" ) { %>
        <script
            type="text/javascript" 
            src="//localhost:35729/livereload.js">
        </script>
    <% } %>    

    <script
        type="text/javascript"
        src="public/bower_components/angular/angular.min.js">
    </script>
    <script
        type="text/javascript"
        src="public/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js">
    </script>
    <script
        type="text/javascript"
        src="public/bower_components/angular-route/angular-route.js">
    </script>
    <script
        type="text/javascript"
        src="public/bower_components/angular-resource/angular-resource.js">
    </script>
    <script
        type="text/javascript"
        src="public/bower_components/angular-cookies/angular-cookies.min.js">
    </script>
    <script
        type="text/javascript"
        src="public/app.js">
    </script>
    <script
        type="text/javascript"
        src="public/routes.js">
    </script>

    <!-- angular services -->
    <% ngServices.forEach( function( ngService ) { %>
        <script
            type="text/javascript"
            src="public/services/<%= ngService %>"></script>
    <% } ); %>

    <!-- angular controllers -->
    <% ngControllers.forEach( function( ngController ) { %>
        <script
            type="text/javascript"
            src="public/controllers/<%= ngController %>"></script>
    <% } ); %>

    <!-- angular directives -->
    <% ngDirectives.forEach( function( ngDirective ) { %>
        <script
            type="text/javascript"
            src="public/directives/<%= ngDirective %>"></script>
    <% } ); %>

    <!-- angular filters -->
    <% ngFilters.forEach( function( ngFilter ) { %>
        <script
            type="text/javascript"
            src="public/filters/<%= ngFilters %>"></script>
    <% } ); %>

    <!-- utils -->
    <% utils.forEach( function( util ) { %>
        <script
            type="text/javascript"
            src="public/utils/<%= util %>"></script>
    <% } ); %>

</head>
<body ng-app="radiocast">
    <div class="navbar navbar-inverse navbar-fixed-top"
         role="navigation"
         ng-controller="NavigationCtrl">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed"
                        type="button"
                        data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Main</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul nav-menu
                    class="nav navbar-nav">
                    <li><a href="#/shows">Shows</a></li>
                    <li><a href="#/users">Users</a></li>
                </ul>
                <div class="navbar-text pull-right">
                    <a class="login"
                       ng-if="!loggedIn" ng-click="login()" href="#">Log in</a>
                    <a class="logout"
                       ng-if="loggedIn" ng-click="logout()" href="#">Log out</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div ng-view></div>
    </div>
</body>
</html>
